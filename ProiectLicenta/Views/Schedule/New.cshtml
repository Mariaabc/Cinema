<head>
    <style>
        .int-button {
            border: 1px solid #000066;
            border-radius: 5px;
            background-color: white;
            color: #000066;
            height: 33px;
        }

            .int-button:hover {
                background-color: #8080ff;
                color: white;
                height: 33px;
            }
    </style>
</head>

<body>

    <h3>New schedule</h3>

    <form method="post" action="/Schedule/New">
        <label> Begin date </label>
        <input class="a" type="date" name="BeginDateTime" />
        <br /><br />

        <label> Begin Time </label>
        <input class="a" type="time" name="Time" />
        <br /><br />

        <label>Duration</label><br />
        <input type="text" style="width: 600px;" name="Duration" />
        <br /><br />

        <select name="MovieId">
            @foreach (var d in ViewBag.Movies)
            {
                <option value="@d.Id">@d.Name</option>
            }
        </select>

        <div style="padding-left:201px;">
            <button class="int-button" type="submit">Add movie</button>
        </div>
    </form>

</body>
