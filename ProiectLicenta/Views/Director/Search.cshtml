<head>
    <style>
        .image {
            height: 80px;
        }

        .int-button {
            border: 1px solid #000066;
            border-radius: 5px;
            background-color: white;
            color: #000066;
            height: 33px;
        }

            .int-button:hover {
                background-color: #8080ff;
                color: white;
                height: 33px;
            }

        .delete-button {
            border: 1px solid darkred;
            border-radius: 5px;
            background-color: white;
            color: darkred;
        }

            .delete-button:hover {
                background-color: indianred;
                color: ghostwhite;
            }

        .search-button {
            border: 1px solid #000066;
            background-color: white;
            color: #000066;
            height: 26px;
        }

            .search-button:hover {
                background-color: #8080ff;
                color: ghostwhite;
            }

        .a {
            color: dimgrey;
            font-weight: bold;
        }

        .title-div {
            border-bottom: 1px solid darkgrey;
        }

        .split_left {
            height: 100%;
            width: 13%;
            position: fixed;
            z-index: 1;
            top: 0;
            overflow-x: hidden;
            padding-top: 40px;
            left: 0px;
            align-items: center;
            border-right: 1px solid darkgrey;
        }

        .split_right {
            height: 100%;
            width: 85%;
            position: fixed;
            z-index: 1;
            top: 0;
            overflow-x: hidden;
            padding-top: 40px;
            right: 0;
        }
    </style>
</head>

<body>

    <h3>Search by "@ViewBag.KeyWord"</h3> <br />

    @if (@User.IsInRole("Administrator") || @User.IsInRole("Editor"))
    {
        <a role="button" class="btn int-button" href="/Director/New">Add another director</a>
    }
    <a role="button" class="btn int-button" href="/Director/Index">Back to all directors</a>
    <br /> <br />

    <form method="post" action="/Director/Search">
        <input type="text" name="KeyWord" />
        <button class="search-button" type="submit">Search</button>
    </form> <br /><br />

    @foreach (var d in ViewBag.Directors)
    {
        <div class="card">
            <div class="col-md-1">
                <img class="image" class="card-img" src=@d.Img>
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"> <b> <a href="/Director/Show/@d.Id"> @d.Name </a></b> </h5>

                    <p class="card-text">@d.Description</p>
                </div>
            </div>

            <div class="col-md-1">
                @if (@User.IsInRole("Administrator") || @User.IsInRole("Editor"))
                {
                    <a role="button" class="btn delete-button" style="height:35px; width:80px;" href="/Director/Delete/@d.Id">Delete</a> <br />
                }
            </div>
        </div>
        <br /><br /><br /><br /><br /><br />
    }

</body>